<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.popovich.shopclient.BasketActivity">

    <TextView
        android:id="@+id/prodbasket"
        android:text="Products in basket:"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />
    <TextView
        android:id="@+id/size_basket"
        android:layout_below="@id/prodbasket"
        android:layout_marginRight="50sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/bill"
        android:textStyle="bold"
        android:text="0$"
        android:padding="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/size_basket"
        android:layout_alignEnd="@+id/prodbasket" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_basket"
        android:layout_below="@id/size_basket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
